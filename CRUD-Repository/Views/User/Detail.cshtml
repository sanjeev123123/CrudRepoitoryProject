@model User

@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-success rounded rounded-3 p-4">
            <h3 class="text-info p-2 m-1 text-center">Detail User</h3>
            <form>

                <div class="form-check">
                    <label asp-for="UserId"></label>
                    <input type="text" asp-for="UserId" class="form-control" disabled/>
                </div>

                <div class="form-check">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name" disabled/>
                </div>

                <div class="form-check">
                    <label asp-for="Gender"></label><br />
                    <label>
                        <input type="radio" class="form-check-inline" name="Gender" asp-for="Gender" value="Male" disabled /> Male
                    </label>
                    <label> <input type="radio" class="form-check-inline" name="Gender" asp-for="Gender" value="Female" disabled/> Female</label>
                    <label>
                        <input type="radio" class="form-check-inline" name="Gender" asp-for="Gender" value="Other" disabled/> Other
                    </label>
                </div>

                <div class="form-check">
                    <label asp-for="Email"></label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Enter Email" disabled/>
                </div>

                <div class="form-check">
                    <label asp-for="Pincode"></label>
                    <input type="text" asp-for="Pincode" class="form-control" placeholder="Enter Pincode" disabled/>
                </div>

                <div class="form-check">
                    <label asp-for="IsActive"></label>

                    @if (Model.IsActive)
                    {
                        <input type="checkbox" asp-for="IsActive" class="form-check-inline" checked="checked" disabled/>
                    }
                    else
                    {
                        <input type="checkbox" asp-for="IsActive" class="form-check-inline" disabled/>
                    }


                </div>

                <div>

                    <a class="btn btn-primary p-2 m-2" asp-controller="user" asp-action="edit" asp-route-id="@Model.UserId" >Edit</a>

                    <a class="btn btn-outline-primary p-2 m-2" asp-controller="user" asp-action="Index">Back to List</a>

                </div>
            </form>
        </div>
    </div>
</div>


